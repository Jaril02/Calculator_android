<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    android:padding="16dp"
    android:background="#ffffff">

    <TextView
        android:id="@+id/txt"
        android:layout_marginTop="90dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:background="#CEC9C9"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:useDefaultMargins="true"
        android:rowCount="5"
        android:columnCount="4"
        >

<!--        row 1-->
        <Button android:id="@+id/rem" android:text="%" android:background="@drawable/ic_btn"/>
        <Button android:id="@+id/expo" android:text="^"/>
        <Button android:id="@+id/bckspc" android:text="âŒ«"/>
        <Button android:id="@+id/clr" android:text="CE"/>
<!--row 2-->
        <Button android:id="@+id/btn1" android:text="1"/>
        <Button android:id="@+id/btn2" android:text="2"/>
        <Button android:id="@+id/btn3" android:text="3"/>
        <Button android:id="@+id/plus" android:text="+" />
<!--        row 3-->
        <Button android:id="@+id/btn4" android:text="4"/>
        <Button android:id="@+id/btn5" android:text="5"/>
        <Button android:id="@+id/btn6" android:text="6"/>
        <Button android:id="@+id/minus" android:text="-" />
<!--        row 4-->
        <Button android:id="@+id/btn7" android:text="7"/>
        <Button android:id="@+id/btn8" android:text="8"/>
        <Button android:id="@+id/btn9" android:text="9"/>
        <Button android:id="@+id/mul" android:text="*" />
<!--        row 5-->
        <Button android:id="@+id/deci"  android:text="."/>
        <Button android:id="@+id/btn0" android:text="0"/>
        <Button android:id="@+id/div" android:text="/"/>
        <Button android:id="@+id/eql" android:text="=" />
    </GridLayout>

</LinearLayout>